# Base L2 Network Configuration
BASE_MAINNET_RPC_URL=https://mainnet.base.org
BASE_SEPOLIA_RPC_URL=https://sepolia.base.org
BASE_SCAN_API_KEY=your_basescan_api_key_here

# Private Key for Contract Deployment (NEVER commit this!)
PRIVATE_KEY=your_private_key_here

# Deployed Contract Addresses (set after deployment)
SHEEP_TOKEN_ADDRESS=
DREAMER_PASS_ADDRESS=

# Database
DATABASE_URL=your_neon_database_url
PGHOST=your_pg_host
PGDATABASE=your_pg_database
PGUSER=your_pg_user
PGPASSWORD=your_pg_password
PGPORT=5432

# Runtime
NODE_ENV=development

# Optional Subsystems
# Set to "true" to enable background processes like dream seeding, scoring engine, and mesh network
# Default: disabled (safe for Railway and resource-constrained deployments)
# INIT_SUBSYSTEMS=true
