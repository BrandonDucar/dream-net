{
    "extends":  "../../tsconfig.base.json",
    "compilerOptions":  {
                            "composite":  true,
                            "outDir":  "./dist",
                            "rootDir":  "./src",
                            "jsx":  "react-jsx",
                            "baseUrl":  ".",
                            "paths":  {
                                          "@/*":  [
                                                      "./src/*"
                                                  ]
                                      },
                            "types":  [
                                          "node"
                                      ],
                            "skipLibCheck": true
                        },
    "include":  [
                    "./src/**/*.ts",
                    "./src/**/*.tsx"
                ],
    "exclude":  [
                    "node_modules",
                    "dist"
                ]
}

