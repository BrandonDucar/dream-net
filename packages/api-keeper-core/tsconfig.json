{
    "extends": "../../tsconfig.base.json",
    "compilerOptions": {
        "outDir": "dist",
        "rootDir": ".",
        "module": "ESNext",
        "target": "ES2022",
        "moduleResolution": "bundler",
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "strict": true,
        "composite": true,
        "declaration": true,
        "types": [
            "node"
        ],
        "skipLibCheck": true
    },
    "include": [
        "./**/*.ts"
    ],
    "references": [
        {
            "path": "../lib"
        },
        {
            "path": "../shared"
        }
    ]
}