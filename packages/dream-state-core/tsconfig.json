{
    "extends": "../../tsconfig.base.json",
    "compilerOptions": {
        "outDir": "dist",
        "rootDir": "src",
        "module": "ESNext",
        "moduleResolution": "bundler",
        "target": "ES2022",
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "strict": true,
        "composite": true,
        "declaration": true,
        "types": [
            "node"
        ],
        "skipLibCheck": true
    },
    "include": [
        "src/**/*"
    ],
    "references": [
        {
            "path": "../shared"
        },
        {
            "path": "../lib"
        },
        {
            "path": "../dreambet-core"
        },
        
        {
            "path": "../wolfpack-funding-core"
        }
    ]
}