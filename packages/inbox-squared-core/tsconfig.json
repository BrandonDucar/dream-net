{
    "extends": "../../tsconfig.base.json",
    "compilerOptions": {
        "outDir": "./dist",
        "rootDir": ".",
        "composite": true,
        "declaration": true,
        "declarationMap": true,
        "sourceMap": true,
        "module": "ESNext",
        "moduleResolution": "bundler",
        "types": [
            "node"
        ],
        "skipLibCheck": true
    },
    "include": [
        "index.ts",
        "types.ts",
        "logic/**/*",
        "adapters/**/*"
    ],
    "references": [
        {
            "path": "../lib"
        },
        {
            "path": "../shared"
        }
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}