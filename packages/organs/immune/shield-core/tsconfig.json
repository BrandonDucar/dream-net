{
    "extends": "../../../../tsconfig.base.json",
    "compilerOptions": {
        "outDir": "dist",
        "rootDir": ".",
        "module": "ESNext",
        "moduleResolution": "bundler",
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "strict": true,
        "composite": true,
        "declaration": true,
        "types": [
            "node"
        ],
        "skipLibCheck": true
    },
    "include": [
        "index.ts"
    ],
    "exclude": [
        "node_modules",
        "dist",
        "src",
        "logic",
        "store",
        "scheduler",
        "adapters"
    ]
}