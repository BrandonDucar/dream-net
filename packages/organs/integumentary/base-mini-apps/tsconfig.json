{
    "extends": "../../../../tsconfig.base.json",
    "compilerOptions": {
        "outDir": "dist",
        "rootDir": ".",
        "module": "ESNext",
        "moduleResolution": "bundler",
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "strict": true,
        "composite": true,
        "declaration": true,
        "declarationMap": true,
        "sourceMap": true,
        "types": [
            "node"
        ],
        "skipLibCheck": true
    },
    "include": [
        "index.ts",
        "src/**/*",
        "logic/**/*",
        "frontend/**/*",
        "types.ts"
    ],
    "references": [
        {
            "path": "../../skeletal/lib"
        },
        {
            "path": "../../skeletal/shared"
        },
        {
            "path": "../api-keeper-core"
        },
        {
            "path": "../wolf-pack"
        },
        {
            "path": "../wolfpack-funding-core"
        },
        {
            "path": "../whale-pack-core"
        },
        {
            "path": "../inbox-squared-core"
        },
        {
            "path": "../jaggy-core"
        },
        {
            "path": "../../circulatory/dream-state-core"
        }
    ],
    "exclude": [
        "node_modules",
        "dist",
        "artifacts",
        "cache",
        "typechain-types"
    ]
}