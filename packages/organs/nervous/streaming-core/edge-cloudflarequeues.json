      {
        "name": "VERIFICATION_REQUESTS",
        "batchSize": 25,
        "visibilityTimeout": 600,
        "messageRetentionPeriod": 43200,
        "deadLetterQueue": "VERIFICATION_DLQ"
      },
      {
        "name": "MOLTBOOK_SYNC",
        "batchSize": 5,
        "visibilityTimeout": 900,
        "messageRetentionPeriod": 172800,
        "deadLetterQueue": "MOLTBOOK_SYNC_DLQ"
      }
    ]
  }
}