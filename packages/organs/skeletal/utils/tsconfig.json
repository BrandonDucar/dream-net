{
    "extends": "../../../../tsconfig.base.json",
    "compilerOptions": {
        "composite": true,
        "declaration": true,
        "declarationMap": true,
        "module": "ESNext",
        "moduleResolution": "bundler",
        "outDir": "dist",
        "rootDir": ".",
        "sourceMap": true,
        "types": [
            "node"
        ],
        "skipLibCheck": true
    },
    "include": [
        "index.ts",
        "src/**/*.ts"
    ],
    "references": [
        {
            "path": "../../skeletal/lib"
        },
        {
            "path": "../../skeletal/shared"
        }
    ],
    "exclude": [
        "dist"
    ]
}