{
    "extends": "../../tsconfig.base.json",
    "compilerOptions": {
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "outDir": "dist",
        "rootDir": ".",
        "esModuleInterop": true,
        "types": [
            "node",
            "vite/client"
        ],
        "skipLibCheck": true
    },
    "include": [
        "src/**/*"
    ],
    "references": [
        {
            "path": "../shared"
        },
        {
            "path": "../lib"
        },
        {
            "path": "../dreamnet-control-core"
        },
        {
            "path": "../dreamnet-os-core"
        }
    ],
    "exclude": [
        "dist",
        "**/*.test.ts"
    ]
}