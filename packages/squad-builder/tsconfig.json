{
    "extends": "../../tsconfig.base.json",
    "compilerOptions": {
        "composite": true,
        "outDir": "./dist",
        "rootDir": "./src",
        "tsBuildInfoFile": "../../node_modules/.cache/squad_builder.tsbuildinfo",
        "types": [
            "node"
        ],
        "skipLibCheck": true,
        "paths": {
            "@dreamnet/shared": [
                "../shared"
            ],
            "@dreamnet/lib": [
                "../lib"
            ],
            "@dreamnet/utils": [
                "../utils"
            ]
        }
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}