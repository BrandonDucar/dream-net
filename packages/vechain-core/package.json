{
    "name":  "@dreamnet/vechain-core",
    "version":  "1.0.0",
    "description":  "VeChain integration for DreamNet - Supply chain, NFTs, IoT, and sustainability",
    "type":  "module",
    "main":  "./dist/index.js",
    "types":  "./dist/index.d.ts",
    "exports":  {
                    ".":  {
                              "source":  "./src/index.ts",
                              "import":  "./src/index.ts",
                              "require":  "./src/index.ts",
                              "default":  "./src/index.ts"
                          },
                    "./*":  {
                                "source":  "./src/*.ts",
                                "import":  "./src/*.ts",
                                "default":  "./src/*.ts"
                            },
                    "./src/*":  "./src/*.ts"
                },
    "scripts":  {
                    "build":  "tsc",
                    "dev":  "tsc --watch",
                    "typecheck":  "tsc --noEmit",
                    "clean":  "rm -rf dist"
                },
    "dependencies":  {
                         "@dreamnet/lib":  "workspace:*",
                         "@dreamnet/shared":  "workspace:*",
                         "thor-devkit":  "^2.0.0"
                     },
    "devDependencies":  {
                            "@types/node":  "^24.10.0",
                            "typescript":  "^5.9.3"
                        },
    "files":  [
                  "dist"
              ]
}
