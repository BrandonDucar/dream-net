{
  "extends": "../tsconfig.base.json",
  "compilerOptions": {
    "composite": true,
    "outDir": "dist",
    "rootDir": ".",
    "tsBuildInfoFile": "../node_modules/.cache/server.tsbuildinfo",
    "noImplicitAny": false,
    "strict": false,
    "skipLibCheck": true,
    "noEmitOnError": false,
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": false,
    "resolvePackageJsonExports": true,
    "resolvePackageJsonImports": true
  },
  "include": [
    "./index.ts",
    "./vite.ts",
    "./config/**/*.ts",
    "./services/**/*.ts",
    "./storage.ts",
    "./types/**/*.d.ts",
    "./trust/**/*.ts",
    "./vector-ledger/**/*.ts",
    "./starbridge/**/*.ts",
    "./legacy/**/*.ts",
    "./mesh/**/*.ts",
    "./agents/**/*.ts",
    "./fleets/**/*.ts",
    "./email/**/*.ts",
    "./routes/**/*.ts",
    "./middleware/**/*.ts",
    "./system/**/*.ts",
    "./utils/**/*.ts",
    "./zk/**/*.ts",
    "../lib/**/*.ts",
    "./db.ts",
    "./simple-notifications.ts",
    "./webhook-notifier.ts",
    "../shared/**/*.ts"
  ],
  "exclude": [
    "dist",
    "**/*.test.ts"
  ]
}

