{
    "extends":  "../../tsconfig.base.json",
    "compilerOptions":  {
                            "outDir":  "dist",
                            "rootDir":  ".",
                            "module":  "commonjs",
                            "target":  "es2019",
                            "esModuleInterop":  true,
                            "resolveJsonModule":  true,
                            "strict":  true,
                            "moduleResolution":  "node",
                            "jsx":  "react",
                            "types":  [
                                          "node"
                                      ],
                            "skipLibCheck": true
                        },
    "include":  [
                    "./**/*.ts",
                    "./**/*.tsx"
                ],
    "exclude":  [
                    "node_modules",
                    "artifacts",
                    "cache",
                    "typechain-types"
                ]
}

