{
    "compilerOptions":  {
                            "target":  "ES2022",
                            "module":  "ESNext",
                            "lib":  [
                                        "ES2022"
                                    ],
                            "moduleResolution":  "bundler",
                            "strict":  true,
                            "esModuleInterop":  true,
                            "forceConsistentCasingInFileNames":  true,
                            "resolveJsonModule":  true,
                            "types":  [
                                          "node"
                                      ],
                            "skipLibCheck": true
                        },
    "include":  [
                    "**/*.ts"
                ],
    "exclude":  [
                    "node_modules"
                ]
}

