{
    "extends":  "../../tsconfig.base.json",
    "compilerOptions":  {
                            "composite":  true,
                            "declaration":  true,
                            "declarationMap":  true,
                            "emitDeclarationOnly":  true,
                            "module":  "ESNext",
                            "moduleResolution":  "Node",
                            "outDir":  "dist",
                            "rootDir":  "src",
                            "sourceMap":  true,
                            "types":  [
                                          "node"
                                      ],
                            "skipLibCheck": true
                        },
    "include":  [
                    "src/**/*.ts"
                ],
    "exclude":  [
                    "dist"
                ]
}

