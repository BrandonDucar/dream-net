{
    "extends":  "../tsconfig.base.json",
    "compilerOptions":  {
                            "composite":  true,
                            "module":  "commonjs",
                            "outDir":  "dist",
                            "rootDir":  "src",
                            "tsBuildInfoFile":  "../node_modules/.cache/server.tsbuildinfo",
                            "noImplicitAny":  false,
                            "strict":  false,
                            "noEmitOnError":  false,
                            "moduleResolution":  "node",
                            "allowImportingTsExtensions":  false,
                            "resolvePackageJsonExports":  true,
                            "resolvePackageJsonImports":  true,
                            "types":  [
                                          "node"
                                      ],
                            "skipLibCheck": true
                        },
    "include":  [
                    "src/**/*",
                    "../lib/**/*.ts",
                    "../shared/**/*.ts"
                ],
    "exclude":  [
                    "dist",
                    "**/*.test.ts"
                ]
}

