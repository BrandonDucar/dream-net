{
    "extends":  "./tsconfig.base.json",
    "compilerOptions":  {
                            "incremental":  true,
                            "tsBuildInfoFile":  "./node_modules/typescript/tsbuildinfo",
                            "noEmit":  true,
                            "jsx":  "preserve",
                            "types":  [
                                          "node"
                                      ],
                            "skipLibCheck": true
                        },
    "include":  [
                    "shared/**/*",
                    "server/**/*",
                    "apps/**/*",
                    "packages/**/*",
                    "spine/**/*"
                ],
    "exclude":  [
                    "node_modules",
                    "build",
                    "dist",
                    "**/*.test.ts"
                ]
}

