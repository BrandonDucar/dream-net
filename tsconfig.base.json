{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "lib": [
      "ES2022",
      "DOM",
      "DOM.Iterable"
    ],
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "types": [
      "node"
    ],
    "noErrorTruncation": true,
    "baseUrl": ".",
    "paths": {
      "@dreamnet/spine": [
        "spine/index.ts"
      ],
      "@dreamnet/*": [
        "packages/*",
        "packages/*/src/index.ts",
        "packages/*/index.ts"
      ],
      "@/*": [
        "packages/client/src/*"
      ]
    }
  }
}