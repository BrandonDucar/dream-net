{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "outDir": "./dist",
    "rootDir": ".",
    "composite": true,
    "jsx": "react-jsx",
    "baseUrl": ".",
    "paths": {
      "@packages/*": ["packages/*"],
      "@apps/*": ["apps/*"],
      "@services/*": ["services/*"],
      "@shared/*": ["shared/*"],
      "@/components/*": ["client/src/components/*"],
      "@/hooks/*": ["client/src/hooks/*"],
      "@/lib/*": ["client/src/lib/*"],
      "@/pages/*": ["client/src/pages/*"],
      "@/utils/*": ["client/src/utils/*"],
      "@assets/*": ["client/public/*"]
    }
  },
  "include": [
    "apps",
    "services",
    "packages",
    "shared",
    "client",
    "server",
    "dreamnodes",
    "lib",
    "vite.config.ts",
    "test-runner.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "build",
    "qa/artifacts"
  ]
}
