{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "incremental": true,
    "tsBuildInfoFile": "./node_modules/typescript/tsbuildinfo",
    "noEmit": true,
    "jsx": "preserve",
    "types": ["node", "vite/client"]
  },
  "include": [
    "client/src/**/*",
    "shared/**/*",
    "server/**/*",
    "apps/**/*",
    "packages/**/*"
  ],
  "exclude": ["node_modules", "build", "dist", "**/*.test.ts"]
}
