{
  "version": 2,
  "buildCommand": "cd client && chmod +x build.sh && bash build.sh || (pnpm install --include=optional && pnpm build)",
  "outputDirectory": "client/dist",
  "installCommand": "cd client && corepack enable pnpm && pnpm install --include=optional",
  "framework": null,
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "https://api.dreamnet.ink/api/$1"
    }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        }
      ]
    }
  ],
  "crons": [
    {
      "path": "/api/heartbeat-cron",
      "schedule": "0 3 * * *"
    }
  ],
  "env": {
    "VITE_API_URL": "https://api.dreamnet.ink"
  }
}
