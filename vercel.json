{
  "version": 2,
  "installCommand": "cd client && npm install --legacy-peer-deps --ignore-scripts",
  "buildCommand": "cd client && rm -rf dist node_modules/.vite && npm run build",
  "outputDirectory": "client/dist",
  "framework": null,
  "ignoreCommand": "git diff --quiet HEAD^ HEAD .",
  "env": {
    "NODE_ENV": "production"
  },
  "rewrites": [
    {
      "source": "/api/:path*",
      "destination": "https://api.dreamnet.ink/:path*"
    },
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ],
  "crons": [
    {
      "path": "/api/jobs/poster",
      "schedule": "*/15 * * * *"
    }
  ]
}
