{
  "version": 2,
  "buildCommand": "cd client && pnpm build",
  "outputDirectory": "client/dist",
  "installCommand": "corepack enable pnpm && corepack prepare pnpm@10.21.0 --activate && cd client && pnpm install --include=optional",
  "framework": null,
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "https://api.dreamnet.ink/api/$1"
    }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        }
      ]
    }
  ],
  "crons": [
    {
      "path": "/api/heartbeat-cron",
      "schedule": "0 3 * * *"
    }
  ],
  "env": {
    "VITE_API_URL": "https://api.dreamnet.ink"
  },
  "functions": {
    "client/dist/**/*.js": {
      "runtime": "nodejs24.x"
    }
  }
}
