{
  "version": 2,
  "buildCommand": "vite build",
  "outputDirectory": "dist/public",
  "installCommand": "npm install",
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/server/index.ts"
    },
    {
      "src": "/(.*)",
      "dest": "/dist/public/$1"
    }
  ],
  "env": {
    "NODE_ENV": "production"
  },
  "crons": [
    { "path": "/api/cron/score", "schedule": "*/5 * * * *" },
    { "path": "/api/cron/archive", "schedule": "0 */6 * * *" },
    { "path": "/api/agents/deploykeeper/run", "schedule": "*/15 * * * *" },
    { "path": "/api/agents/surgeon/sweep", "schedule": "*/10 * * * *" },
    { "path": "/api/defense/arm", "schedule": "* * * * *" }
  ]
}
